.top-image
  width 100%
  background url("../img/general/top-bg.jpg") no-repeat center
  background-size cover
  height 563px


.title
  text-align center
  font-size 1.375rem
  font-weight 600
  line-height 1.3em
.form
  padding 70px 0
  background-color #bbc9d2
  &__block
    flexRow()
    max-width 700px
    margin auto
    margin-top 75px
  &__img
    width 100%
    max-width 296px

.form__control
  width 275px
  input
    padding-left 18px
    border none
    height 50px
    margin-bottom 10px
    width 100%

.form__content
  flexColumn()

.text
  margin-top 90px
  p
    line-height 1.2em
    font-family 'SF UI Display'
    text-align center
    margin-top 30px

#map
  width 100%
  height 800px

.oofers
  padding 60px