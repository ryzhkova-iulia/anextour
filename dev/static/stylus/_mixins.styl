// Миксины для спрайта
spriteWidth($sprite)
	width: $sprite[4]


spriteHeight($sprite)
	height: $sprite[5]

spritePosition($sprite)
	background-position: $sprite[2] $sprite[3]


spriteImage($sprite)
	background-image: url(../img/sprite/$sprite[8])

sprite($sprite)
	spriteImage($sprite)
	spritePosition($sprite)
	spriteWidth($sprite)
	spriteHeight($sprite)

flexRow()
	display flex
	align-items center
	justify-content space-between
	flex-wrap wrap
flexColumn()
	display flex
	align-items center
	flex-direction column
	justify-content space-between
