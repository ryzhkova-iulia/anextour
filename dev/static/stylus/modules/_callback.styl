.popap
    width 100%
    max-width: 416px;
    position: relative;
    border-radius: 8px;
    box-sizing: border-box;
    padding: 13px 32px 48px 32px;
    background-color: #00aeef;
    margin: 0 auto;
    box-shadow: 0 3px 16px 0 rgba(62, 71, 88, 0.2);

#three h2
    font-size: 24px;
    font-weight: bold;
    line-height: 1.33;
    margin-bottom: 32px;

.popap h2 {
    font-size: 32px;
    font-weight: bold;
    line-height: 2;
    text-align: center;
    padding: 0;
    margin: 0 0 19px 0;
    color #ffffff
}

.colendar-wrapp
    position relative

.popap input
    width: 100%;
    height: 48px;
    border-radius: 8px;
    border: none;
    background-color: #fafafa;
    margin-bottom: 24px;
    padding: 0 0 0 16px;
    box-sizing: border-box;
    box-shadow: inset 0 1px 2px 0 rgba(62, 71, 88, 0.2);


.colendar-wrapp img
    position: absolute;
    top: 12px;
    right: 16px;
    cursor: pointer;

.wrapp__select {
    margin-bottom: 19px;
}
.select__items {
    width: 160px;
    float: left;
    margin-right: 32px;
}
.select__items>span {
    font-size: 14px;
    font-weight: 500;
    color: #fff;
    display block
    margin-bottom 5px
}
.select__items .input_wrapp>span {
    display: inline-block;
    width: 48px;
    cursor: pointer;
    background-color: #3e4758;
    text-align: center;
    position: absolute;
    line-height: 48px;
    color: #fff;
    border-radius: 8px;
}
.select__items .input_wrapp .minus {
    border-radius: 8px 0 0 8px;
    top: 0;
    left: 0;
    display: inline-block;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    height: 48px;
}
.select__items .input_wrapp {
    position: relative;
    text-align: center;
}
.main__btn {
    border-radius: 8px;
    background-color: #f9742c;
    font-size: 16px;
    font-weight: 500;
    color: #fff;
    padding: 14px 23px;
    text-decoration: none;
    transition: 0.4s background-color;
}
.popap .main__btn {
    padding: 0;
    line-height: 48px;
    width: 100%;
    display: inline-block;
    text-align: center;
    font-size: 20px;
    font-weight: 900;
    margin-top: 8px;
}

.agreement-link {
    display: block;
    clear: both;
    text-align: center;
    color: white;
}

.popap .agreement-link input[type=checkbox], .selection__tour-form .agreement-link input[type=checkbox] {
    height: 13px;
    width: 13px;
    margin: 0px;
    margin-top: 20px;
}

.agreement-link a {
    color: white;
    text-decoration underline
}


